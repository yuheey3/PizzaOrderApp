<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    Title="Manager Page"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Assignment1.ManagerPage">

        <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="15">
            <Button Text="Check Current Order" Clicked="CurrentOrder_Clicked" BackgroundColor="lightGray" TextColor="black" Padding= "20,0,20,0"  FontAttributes="Bold" />
            <Button Text="Update Current Order" Clicked="UpdateOrder_Clicked" BackgroundColor="lightGray" TextColor="black"  FontAttributes="Bold"/>
            <Button Text="Previous Orders" Clicked="PreviousOrder_Clicked" BackgroundColor="lightGray" TextColor="black" FontAttributes="Bold"/>
            <Button Text="New Order" Clicked="NewOrder_Clicked" BackgroundColor="lightGray" TextColor="black"  FontAttributes="Bold"/>
        </StackLayout>
       
         
</ContentPage>
